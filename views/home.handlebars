<!-- --------------------------- Greeting ---------------------------- -->

<div class="text-center bg-secondary p-3 mb-5">
    {{#unless logged_in}}
    <div class="m-3 text-center text-light fs-4">
        Welcome to TechBlogs! Login or Signup to create, edit, comment or delete.
    </div>
    {{/unless}}
</div>

<!-- --------------------------- Body ---------------------------- -->
<div class="container">

    <!--Loop Through Each Object in Blogs Array and create a card-->
    {{#each blogs as |blog|}}

    <div class="row mt-4">
        <button class="btn btn-warning mb-1" type="button" data-bs-toggle="collapse" data-bs-target="#id" 
            aria-expanded="false" aria-controls="collapseExample">
            <span class="fw-bold">{{blog.title}}</span>
            <br>
            <span class="fst-italic">{{blog.date_created}}</span>
        </button>
        <div class="collapse mt-1" id="id">
            <div class="card text-center px-0 py-0 shadow p-3 mb-3 bg-body rounded">
                <div class="card-header bg-light">
                    <span>{{blog.user.user_name}}</span>
                </div>
                <div class="card-body pe-0">

                    <p class="card-text">{{blog.content}}</p>

                    <h6 class="card-title">Comments</h6>

                    <div>
                        Comment 1 <span> - username</span>
                    </div>
                </div>
            </div>
            <!--Conditionally Render Comments here if they are signed in-->
             <div class="text-center">
                <button type="button" class=" comment btn btn-info mb-3 shadow-sm">
                    <i class="far fa-comment"></i>
                </button>
            </div>
           
            
        </div>
    </div>

    {{/each}}

</div>
        

            
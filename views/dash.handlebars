<!-- --------------------------- Modal ---------------------------- -->
<!-- Create new Blog (trigger modal) -->
<div class="text-center bg-secondary p-3 mb-5">
     <div class="row text-center fs-5 mt-2 text-white">
        <p>Hello {{user_name}}! Lets talk tech.</p>
    </div>
    <button type="button" class="btn btn-warning shadow-sm fw-bold mb-2" data-bs-toggle="modal"
        data-bs-target="#newBlogModal">
        Create New Blog
    </button>
</div>

<!-- Modal -->
<div class="modal fade mt-5" id="newBlogModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="p-2">
                <div class="mb-3">
                    <label for="titleinput" class="form-label fw-bolder">Title</label>
                    <input type="text" class="form-control new-blog-title" id="modal1"
                        placeholder="Enter Blog Title">
                </div>
                <div class="mb-3">
                    <label for="contentinput" class="form-label fw-bolder">Content</label>
                    <textarea class="form-control new-blog-content" id="exampleFormControlTextarea1" placeholder="Enter Content..."
                        rows="3"></textarea>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id = "post-new-blog" class="btn btn-warning">Post</button>
            </div>
        </div>
    </div>
</div>


<!-- --------------------------- Body ---------------------------- -->
<div class="container">

    <!--Loop Through Each Object in Blogs Array and create a card-->
    {{#each blogs as |blog|}}

    <div class="row mt-4">
        <button class="btn btn-warning mb-1" type="button" data-bs-toggle="collapse" data-bs-target="#id"
            aria-expanded="false" aria-controls="collapseExample">
            <span class="fw-bold">{{blog.title}}</span>
            <br>
            <span class="fst-italic">{{blog.date_created}}</span>
        </button>
        <div class="collapse mt-1" id="id">
            <div class="card text-center px-0 py-0 shadow p-3 mb-3 bg-body rounded">
                <div class="card-header bg-light">
                    <span>{{blog.user.user_name}}</span>
                </div>
                <div class="card-body pe-0">

                    <p class="card-text">{{blog.content}}</p>

                    <h6 class="card-title">Comments</h6>

                    <div>
                        Comment 1 <span> - username</span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="button" class=" comment-blog btn btn-info mb-3 shadow-sm">
                    <i class="far fa-comment"></i>
                </button>
                <button type="button" class=" edit-blog btn btn-warning mb-3 shadow-sm">
                    <i class="fas fa-pencil-alt"></i>
                </button>
                <button type="button" class=" delete-blog btn btn-danger mb-3 shadow-sm">
                    <i class="far fa-trash-alt"></i>
                </button>
            </div>
        </div>
    </div>

    {{/each}}

</div>

<!--Script for blogs management on dashboard page-->
<script src="/js/dashLogic.js"></script>


